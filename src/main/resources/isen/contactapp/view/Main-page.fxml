<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" 
            prefHeight="600.0" prefWidth="800.0" 
            xmlns="http://javafx.com/javafx/25" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="isen.contactapp.view.MainPageController">
   
   <children>
      <!-- Header -->
      <VBox spacing="10" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
         <padding>
            <Insets top="10" bottom="10" left="10" right="10"/>
         </padding>
         
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="My Contacts" textAlignment="CENTER">
            <font>
               <Font name="Corbel" size="38.0" />
            </font>
         </Text>
      </VBox>
      
      <!-- Main Content -->
      <SplitPane dividerPositions="0.35" 
                 AnchorPane.topAnchor="80" 
                 AnchorPane.bottomAnchor="0" 
                 AnchorPane.leftAnchor="0" 
                 AnchorPane.rightAnchor="0">
        
        <!-- Left Side: Person List -->
        <AnchorPane minWidth="200" prefWidth="250">
           <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.bottomAnchor="10" 
                 AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
              
              <Label text="People" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
              <TextField fx:id="searchField" promptText="Search..." />
              <TableView fx:id="personTable" VBox.vgrow="ALWAYS">
                <columns>
                  <TableColumn fx:id="personColumn" prefWidth="220" text="Name" />
                </columns>
              </TableView>
              
              <Button text="Add New Person" onAction="#handleCreatePersonButton" 
                      maxWidth="Infinity" style="-fx-font-size: 14;"/>
           </VBox>
        </AnchorPane>
        
        <!-- Right Side: Person Details Form -->
        <AnchorPane fx:id="formPane" minWidth="400" prefWidth="500" visible="false">
           <ScrollPane fitToWidth="true" 
                       AnchorPane.topAnchor="0" 
                       AnchorPane.bottomAnchor="0" 
                       AnchorPane.leftAnchor="0" 
                       AnchorPane.rightAnchor="0">
              <VBox spacing="15">
                 <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                 </padding>
                 
                 <Label text="Person Details" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                 
                 <!-- Last Name -->
                 <VBox spacing="5">
                    <Label text="Last Name *" />
                    <TextField fx:id="lastNameField" promptText="Enter last name"/>
                 </VBox>
                 
                 <!-- First Name -->
                 <VBox spacing="5">
                    <Label text="First Name *" />
                    <TextField fx:id="firstNameField" promptText="Enter first name"/>
                 </VBox>
                 
                 <!-- Nickname -->
                 <VBox spacing="5">
                    <Label text="Nickname *" />
                    <TextField fx:id="nicknameField" promptText="Enter nickname"/>
                 </VBox>
                 
                 <!-- Phone Number -->
                 <VBox spacing="5">
                    <Label text="Phone Number" />
                    <TextField fx:id="phoneNumberField" promptText="Enter phone number"/>
                 </VBox>
                 
                 <!-- Address -->
                 <VBox spacing="5">
                    <Label text="Address" />
                    <TextField fx:id="addressField" promptText="Enter address"/>
                 </VBox>
                 
                 <!-- Email -->
                 <VBox spacing="5">
                    <Label text="Email Address" />
                    <TextField fx:id="emailAddressField" promptText="Enter email"/>
                 </VBox>
                 
                 <!-- Birth Date -->
                 <VBox spacing="5">
                    <Label text="Birth Date" />
                    <DatePicker fx:id="dateField" promptText="Select birth date" maxWidth="Infinity"/>
                 </VBox>
                 
                 <!-- Spacer -->
                 <Region minHeight="20"/>
                 
                 <!-- Buttons -->
                 <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="Save" onAction="#handleSaveButton" 
                            prefWidth="100" prefHeight="40"
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold;"/>
                    <Button text="Delete" onAction="#handleDeleteButton" 
                            prefWidth="100" prefHeight="40"
                            style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold;"/>
                 </HBox>
                 
              </VBox>
           </ScrollPane>
        </AnchorPane>
        
      </SplitPane>
   </children>
</AnchorPane>